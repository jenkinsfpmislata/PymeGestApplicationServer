<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/PymegestApplicationServer">
<Resource name="jdbc/myoracle" 
          auth="Container"
          type="javax.sql.DataSource" 
          driverClassName="com.mysql.jdbc.Driver"
          url="jdbc:mysql://localhost/pymegest_application"
          username="root" 
          password="root" 
          maxActive="100"
          maxIdle="30"
          maxWait="10000"
          validationQuery="SELECT 1 FROM dual" />
</Context>


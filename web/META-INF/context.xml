<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/PymeGestApplicationServer">
<Resource name="jdbc/pymegest_application" 
          auth="Container"
          type="javax.sql.DataSource" 
          driverClassName="com.mysql.jdbc.Driver"
          url="jdbc:mysql://localhost:3306/pymegest_application"
          username="root" 
          password="" 
          maxActive="100"
          maxIdle="30"
          maxWait="10000"
          validationQuery="SELECT 1 FROM dual" 
          factory = "org.apache.tomcat.jdbc.pool.DataSourceFactory"  />
</Context>

